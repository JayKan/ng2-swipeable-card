{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noEmitHelpers": false,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src/lib"
  },
  "exclude": [
    "src/demo-app",
    "node_modules",
    "typings/index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
